{
    "name": "Translate",
    "version": "0.1",
    "author": "Danilo Toro",
    "description": "Traductor de palabras seleccionadas en ingl√©s. Powered by Yandex.Translate ",
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["js/content.js"]
        }
    ],
    "background": {
        "scripts": ["js/background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "index.html",
        "default_title": "Translate your selection",
        "default_icon": {
            "32": "images/subject_32.png",
            "128": "images/subject_32.png"
          }
    },
    "icons":{
        "32": "images/subject_32.png",
        "128": "images/subject_32.png"
      }
}